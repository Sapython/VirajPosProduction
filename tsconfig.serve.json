{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "es2022",  // Use es2022 or esnext for ESM
    "target": "es2022",  // Adjust to ES2022 or higher for better ESM support
    "types": [
      "node"
    ],
    "lib": [
      "es2017", "es2016", "es2015", "es2018", "dom"
    ]
  },
  "files": [
    "app/main.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
